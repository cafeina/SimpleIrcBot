#ifndef UTILITIES_H
#define UTILITIES_H

#include <sstream>
#include <string>
#include <sys/stat.h>
#include <vector>

#if defined(__WIN32__) || defined(__WIN64__)
#define stat64 _stat64
#endif

struct FileInfo {
	unsigned long long file_size;
};

std::vector<std::string> list_files(std::string, const std::string="", int=0);
std::vector<std::string> split(const std::string&, const std::string=" ");
std::string get_file_name(const std::string&);
std::string get_path(const std::string&);
std::string trim(const std::string&);
FileInfo get_file_info(const std::string&);


#endif //UTILITIES_H

